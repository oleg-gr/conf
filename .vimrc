"Oleg Grishin

set nocompatible

set backspace=indent,eol,start

imap jj <Esc>

set backupdir=~/vimtmp,.
set directory=~/vimtmp,.

set ruler
set showcmd 
set laststatus=1
set nowrap 
set number
set showmatch

set expandtab
set smarttab

set shiftwidth=3
set softtabstop=3

set ignorecase
set smartcase
set incsearch
set hlsearch

set smartindent
set autoindent

syntax enable
filetype plugin indent on
